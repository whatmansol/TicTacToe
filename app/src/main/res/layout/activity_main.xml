<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000000">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/myGridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="3dp"
        app:layout_constraintVertical_bias="0.498"

        app:rowCount="3">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="120dp"
            android:layout_height="125dp"
            android:layout_margin="2dp"
            android:background="@color/black"
            android:onClick="imageViewTapped"
            android:tag="0" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="120dp"
            android:layout_height="125dp"
            android:layout_margin="2dp"
            android:background="@color/black"
            android:onClick="imageViewTapped"
            android:tag="1" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="120dp"
            android:layout_height="125dp"
            android:layout_margin="2dp"
            android:background="@color/black"
            android:onClick="imageViewTapped"
            android:tag="2" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="120dp"
            android:layout_height="125dp"
            android:layout_margin="2dp"
            android:background="@color/black"
            android:onClick="imageViewTapped"
            android:tag="3" />

        <ImageView
            android:id="@+id/img5"
            android:layout_width="120dp"
            android:layout_height="125dp"
            android:layout_margin="2dp"
            android:background="@color/black"
            android:onClick="imageViewTapped"
            android:tag="4" />

        <ImageView
            android:id="@+id/img6"
            android:layout_width="120dp"
            android:layout_height="125dp"
            android:layout_margin="2dp"
            android:background="@color/black"
            android:onClick="imageViewTapped"
            android:tag="5" />

        <ImageView
            android:id="@+id/img7"
            android:layout_width="120dp"
            android:layout_height="125dp"
            android:layout_margin="2dp"
            android:background="@color/black"
            android:onClick="imageViewTapped"
            android:tag="6" />

        <ImageView
            android:id="@+id/img8"
            android:layout_width="120dp"
            android:layout_height="125dp"
            android:layout_margin="2dp"
            android:background="@color/black"
            android:onClick="imageViewTapped"
            android:tag="7" />

        <ImageView
            android:id="@+id/img9"
            android:layout_width="120dp"
            android:layout_height="125dp"
            android:layout_margin="2dp"
            android:background="@color/black"
            android:onClick="imageViewTapped"
            android:tag="8" />

    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:backgroundTint="#16C7DF"
        android:text="@string/resetBut"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.256"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myGridLayout" />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:backgroundTint="#F10F0F"
        android:text="@string/exitBut"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.699"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myGridLayout" />

    <TextView
        android:id="@+id/title"
        android:layout_width="293dp"
        android:layout_height="73dp"
        android:text="@string/title"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="50dp"
        android:fontFamily="cursive"
        app:layout_constraintBottom_toTopOf="@+id/myGridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>